
@page
@model people.pages.HtmlValidationModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/main.css">
    <title>htmlvalidation</title>

</head>
<body>
    <h1>Validation</h1>

    <form novalidate   method="post">

        <label for="">
            Student Number :
            <input type="text" name="studentNumber" id="studentNumber" size="20" maxlength="9" pattern = "[Ss]\d{8}" placeholder="S00000000" />
        </label>

        <br />
        <fieldset>
            <legend>Some Numbers</legend> <!-- Fieldset title -->

            <label for="num1">
                Number 1
                <input type="number" pattern="\d+" name="num1" placeholder="only whole numbers" />
            </label>
            <br />
            <br />

            <label for="num2">
                Number 2
                <input type="number"   name="num2" placeholder="only -10 to 10"  />
            </label>
            <br>
            <br />

            <label for="num3">
                Number 3
                <input type="number" pattern="[-9 9]" name="num3" id="num3" step="0.01" placeholder="0.00" />
            </label>
            <br>
            <br />


        </fieldset>
        <br />
        <input type="submit" name="submit" value="Submit" />

    </form>
    <h2>@Model.Massage</h2>

</body>
</html>
